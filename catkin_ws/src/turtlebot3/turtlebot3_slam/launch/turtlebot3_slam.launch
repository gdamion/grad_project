  <launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="slam_methods" default="toolbox_karto" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration, toolbox_karto, toolbox_lifelong]"/>
  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>

  <arg name="group_slam" default="false"/>

  <arg name="auto_explore" default="true"/>
  <arg name="explore_costmap" default="false"/>

  <arg name="set_namespace" default=""/>
  <arg name="set_base_frame" default="base_link"/>
  <arg name="set_odom_frame" default="odom"/>
  <arg name="set_map_frame"  default="map"/>
  <arg name="set_map_name"  default="map"/>
  <arg name="set_cmd_vel_frame" default="cmd_vel" />
  <arg name="set_scan_frame" default="scan" />

  <arg name="open_rviz" default="true"/>

  <param name="map_name"  value="$(arg set_map_name)"/>
  <param name="scan_topic"  value="$(arg set_scan_frame)"/>

  <group if="$(arg group_slam)">
    <param name="base_frame" value="$(arg set_namespace)/$(arg set_base_frame)"/>
    <param name="odom_frame" value="$(arg set_namespace)/$(arg set_odom_frame)"/>
    <param name="map_frame"  value="$(arg set_namespace)/$(arg set_map_frame)"/>
  </group>

  <group unless="$(arg group_slam)">
    <param name="base_frame" value="$(arg set_base_frame)"/>
    <param name="odom_frame" value="$(arg set_odom_frame)"/>
    <param name="map_frame"  value="$(arg set_map_frame)"/>
  </group>

  <!-- TurtleBot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="multi_robot_name" value="$(arg set_namespace)"/>
  </include>

  <!-- SLAM: Gmapping, Cartographer, Hector, Karto, Frontier_exploration, RTAB-Map -->
  <include file="$(find turtlebot3_slam)/launch/turtlebot3_$(arg slam_methods).launch"/>

  <include file="$(find turtlebot3_slam)/launch/move_base_0_new.launch"/>

  <node pkg="explore_lite" type="explore" respawn="false" name="explore" output="screen">
    <!-- <param name="robot_base_frame" value="tb3_0/$(arg set_base_frame)"/>
    <param name="costmap_topic" value="$(arg set_map_frame)"/> -->
    <param name="robot_base_frame" value="$(arg set_base_frame)"/>
    <param name="costmap_topic" value="$(arg set_map_frame)"/>

    <param name="costmap_updates_topic" value="map_updates"/>
    <param name="visualize" value="true"/>
    <param name="planner_frequency" value="0.33"/>
    <param name="progress_timeout" value="30.0"/>
    <param name="potential_scale" value="3.0"/>
    <param name="orientation_scale" value="0.0"/>
    <param name="gain_scale" value="1.0"/>
    <param name="transform_tolerance" value="0.3"/>
    <param name="min_frontier_size" value="0.75"/>
  </node>

  <!-- rviz -->
  <!-- <group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find turtlebot3_slam)/rviz/turtlebot3_$(arg slam_methods).rviz"/>
  </group> -->
</launch>

